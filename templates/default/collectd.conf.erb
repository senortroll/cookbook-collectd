#
# Config file for collectd(1).
# Please read collectd.conf(5) for a list of options.
# http://collectd.org/
# Auto generated by Chef for <%= node['fqdn'] %>
#

##############################################################################
# Global                                                                     #
#----------------------------------------------------------------------------#
# Global settings for the daemon.                                            #
##############################################################################

Hostname     "<%= node['hostname'] %>"
FQDNLookup   <%= @fqdn_lookup %>
BaseDir      "<%= @base_dir %>"
PIDFile      "<%= @pid_file %>"
PluginDir    "<%= @plugin_dir %>"
TypesDB      "<%= @types_db.join('", "') %>"

Interval     <%= @interval %>
Timeout      <%= @timeout %>

ReadThreads  <%= @read_threads %>
WriteThreads <%= @write_threads %>

# Limit the size of the write queue. Default is no limit. Setting up a limit is
# recommended for servers handling a high volume of traffic.
WriteQueueLimitHigh <%= @write_queue_limit_high %>
WriteQueueLimitLow  <%= @write_queue_limit_low %>

# Including plugin configs
Include "/etc/collectd/plugins/*.conf"
Include "/etc/collectd/thresholds.conf"
